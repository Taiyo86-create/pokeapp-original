<div class="loginArea">
    <div class="loginBox">
        <h1>ログイン</h1>
        <p>※ポケともをご利用いただくにはログインが必要です</p>
    
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class=fieldArea>
          <div class="field">
            <%= f.label :email, "email" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "ぱすわ〜どを記録" %>
          </div>
        <% end %>

          <div class="actions">
            <%= f.submit "ログイン", class: "loginBtn" %>
          </div>
          <div class=conformArea>
          <%- if controller_name != 'sessions' %>
            <%= link_to "ログイン", new_session_path(resource_name), class: "conform" %><br />
          <% end %>

          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "新規登録", new_registration_path(resource_name), class: "conform" %><br />
          <% end %>

          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name), class: "conform" %><br />
          <% end %>

          <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
            <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "conform" %><br />
          <% end %>

          <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
            <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
          <% end %>

          <%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
            <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
            <% end %>
          <% end %>
          </div>
        </div>
      <% end %>
    </div>
</div>

