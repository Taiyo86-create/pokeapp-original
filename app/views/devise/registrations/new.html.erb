<div class="loginArea">
    <div class="loginBox">
        <h1>会員登録</h1>
        <p>※ポケともをご利用いただくには会員登録が必要です</p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="fieldArea">
      
      <div class="field">
          <%= f.label :nick_name, 'あなたの名前は？' %><br />
          <%= f.text_field :nick_name, autofocus: true, autocomplete: "nick_name" %>
        </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード確認" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      
      <div class="hashData">
        <div class="field">
          <%= f.label :age_id, "年齢" %><br />
          <%= f.collection_select(:age_id, Age.all, :id, :name, {}, {class:"select-box"}) %>
        </div>

        <div class="field">
          <%= f.label :status_id, "職業" %><br />
          <%= f.collection_select(:status_id, Status.all, :id, :name, {}, {class:"select-box"}) %>
        </div>

        <div class="field">
          <%= f.label :sex_id, "性別" %><br />
          <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class:"select-box"}) %>
        </div>

        <div class="field">
          <%= f.label :favorite_title_id, "好きなタイトル" %><br />
          <%= f.collection_select(:favorite_title_id, FavoriteTitle.all, :id, :name, {}, {class:"select-box"}) %>
        </div>
      </div>

      <div class="field">
        <%= f.label :phone_number, '電話番号' %><br />
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
      </div>

      <div class="hashData">
        <div class="field">
          <%= f.label :icon_id, "あなたのイメージ" %><br />
          <%= f.collection_select(:icon_id, Icon.all, :id, :name, {}, {class:"select-box"}) %>
        </div>

        <div class="field">
          <%= f.label :profile, 'ひとこと!' %><br />
          <%= f.text_field :profile, autofocus: true, autocomplete: "profile" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "loginBtn" %>
      </div>

      <%= link_to "ログイン", new_session_path(resource_name), class: "conform" %><br />
      </div>
      
    <% end %>
    </div>
    
</div>

